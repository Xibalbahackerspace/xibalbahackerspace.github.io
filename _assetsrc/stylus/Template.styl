
// * Global color pallete
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$color-white = #ffffff
$color-black = #444444

$color-gray = #2C2D2C
$color-gray-light-20 = lighten($color-gray, 20)


$color-orange = orange

// * Font families
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
$font-family-body = 'Gotham', 'Helvetica Neue', Helvetica, Arial, sans-serif
$font-family-title = $font-family-body



// * Including Lesli CSS
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
@require '../vendor/lesli/'


// * Fonts
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
@font-face
    font-family 'Gotham'
    font-style normal
    font-weight 100
    src url('/assets/fonts/gotham/GothamLight.ttf') format('truetype')


// * Base styles
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
Lesli-base()


// * Global dom styles
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
*
	color $color-gray
	font-family $font-family-body
	font-weight 300


html
body
	color $color-gray
	font-family $font-family-body
	font-size 16px
	line-height 1.1


// * Navigation
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
#menu-button
	top 1.5rem
	z-index 999
	right 1.5rem
	display flex
	align-items center
	position fixed
	
	img
		width 50px
	
#menu-container
	display none
	background-color $color-white
	position fixed
	z-index 998
	width 100%

	ul
		margin 10rem auto 0
		max-width 250px
		width 100%
		height 100vh
		
		li
			margin-top 1.5rem 
			text-align right
			
			a
				padding-right 8rem
				text-transform uppercase
				border-bottom 2px solid $color-gray

h2.title
	font-size 4rem
	
hr.line
	border-bottom 2px solid $color-gray
	margin 6rem auto


footer
	padding 5rem 0 0
	//background-color lighten($color-gray, 70)

	div.contact
		padding 5rem 0
		background-color $color-gray
		
		h3
			margin-bottom 10px
			font-size 1.8rem
			text-align center
			color $color-white

		form
			display block
			margin 0 auto
			padding 0 2rem
			max-width 500px
		
		input,
		textarea
			width 100%
			border none
			padding .6rem
			display block
			border-radius 3px
			margin-bottom .25rem
			border 1px solid $color-gray

		textarea
			height 125px
			resize none
			
		input[type="submit"]
			border none
			font-weight 800
			color $color-white
			padding .8rem
			background-color $color-orange

	div.social
		padding 1rem 0
		
		ul
			width 100%
			text-align center

			li
				padding 0 .2rem
				display inline-block

			img
				width 50px
