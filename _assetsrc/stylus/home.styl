
// * Template
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
@require 'Template'


// * Loading modules
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
@require Lesli--load('flex', '../vendor/lesli/src/')
@require Lesli--load('grid', '../vendor/lesli/src/')


// * Header
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
header
	Lesli-flex-center('vertical')
	height 40vh
	min-height 500px
	text-align center

	img
		width 100%
		max-width 275px


// * Services
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
section.services
	width 90%
	max-width 1000px
	margin 0 auto
	Lesli-grid(columns: 3, margin: 25px, breakpoint: 480px)
	
	div
		text-align center
		
	// service icon
	img
		width 175px
		margin 0 auto 10px

	// title
	h2
		font-weight 600
		margin-bottom 5px

	a
		width 70px
		display block
		margin 0 auto
		font-weight bold
		color $color-orange
		border-bottom 1px solid $color-orange


@media(max-width: 480px)

	// * Services
	section.services

		div
			padding 1rem
			margin-bottom 4rem
