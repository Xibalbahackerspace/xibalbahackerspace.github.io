@require 'Template'


// * Loading modules
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
@require Lesli--load('flex', '../vendor/lesli/src/')
@require Lesli--load('grid', '../vendor/lesli/src/')


// * Page header
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
header
	Lesli-flex-center('vertical')
	height 100vh
	
	h1
		text-transform uppercase
		line-height .70
		font-size 3rem
		text-align right
		margin-bottom 2rem

	div
		display block
		width 100%
		max-width 160px
		border 4px solid $color-black
		border-radius 15px
		padding .8rem

	img
		width 100%


section
	Lesli-grid(columns: 2, margin: 50px, breakpoint: 100px)

	h2
		margin 1rem auto 1.5rem
		text-align center

	article
		vertical-align top
		
		p
			font-size 1.2rem

		div.container
			width 100%
			height 200px
			margin-bottom 1rem
			background-color $color-black
