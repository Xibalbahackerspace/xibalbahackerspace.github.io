@require '../base/base'

lesli-base()

/*
* Email body global
* ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
* @author Luis Gdonis <https://www.lesli.tech>
* @since 0.1.0
*/
body.lesli-mail
	background-color #f0f0f0

/*
* Email container
* ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
* @author Luis Gdonis <https://www.lesli.tech>
* @since 0.1.0
*/
table.lesli-mail
	border-spacing 0px
	margin 20px auto
	max-width 800px
	width 98%

	// some resets
	*
		font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif
		line-height 1.3


/*
* Email header
* ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
* @author Luis Gdonis <https://www.lesli.tech>
* @since 0.1.0
*/
table.lesli-mail
	
	thead > tr td
		padding 25px 0px 25px 30px
		//background-color $email-standard-color-primary
		//color $email-standard-color-white
		text-align left
			

/*
* Email body
* ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
* @author Luis Gdonis <https://www.lesli.tech>
* @since 0.1.0
*/
table.lesli-mail
	tbody > tr td
		text-align left
		padding 25px 0px 30px 30px
		//background-color $email-standard-color-white

	// titles
	h3
		font-size 1.2rem
		margin-bottom 15px
	
	// Parrafos	
	p
		margin-bottom 10px
		
	// Links
	a
		border-bottom 1px solid rgb(40, 100, 150)

/*
* Email footer
* ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
* @author Luis Gdonis <https://www.lesli.tech>
* @since 0.1.0
*/
table.lesli-mail
	
	tfoot > tr td
		padding 20px 0px

		p
			margin 0px
			font-size 12px
			//color darken($email-standard-color-gray, 30)
			


/*
* Email Helpers
* ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
* @author Luis Gdonis <https://www.lesli.tech>
* @since 0.1.0
*/
table.lesli-mail


	// * Displays
	.lesli-mail-display-inline
		display inline
	

	// * Aligners
	.lesli-mail-center-vertical
		vertical-align middle
		

	// * Widths
	for w in ( 1 .. 25 )
		
		$width-class-width = (w * 10)
		$width-class-name = 'lesli-mail-width-' + $width-class-width
		
		.{$width-class-name}
			width unit( $width-class-width, 'px')