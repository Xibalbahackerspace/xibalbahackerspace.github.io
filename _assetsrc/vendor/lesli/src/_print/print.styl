$color-gray-base = rgb(240, 240, 240)

body.lesli-print
	
	.text
		display block
		margin 0 auto
		min-height 17px
		background-color darken($color-gray-base, 10)

	header
		background-color $color-gray-base

		h1 .text
			width 50%
			height 40px
			background-color darken($color-gray-base, 42)

		h2 .text
			width 40%
			height 35px
			background-color darken($color-gray-base, 36)

		h3 .text
			width 30%
			height 30px
			background-color darken($color-gray-base, 30)

		h4 .text
			width 25%
			height 25px
			background-color darken($color-gray-base, 24)

		h5 .text
			width 20%
			height 23px
			background-color darken($color-gray-base, 18)

		h6 .text
			width 15%
			height 20px
			background-color darken($color-gray-base, 12)


	section

		h1 .text
			width 25%
			height 30px
			background-color darken($color-gray-base, 30)

		h2 .text
			width 20%
			height 35px
			background-color darken($color-gray-base, 24)

		h3 .text
			width 15%
			height 30px
			background-color darken($color-gray-base, 18)

		h4 .text
			width 12%
			height 25px
			background-color darken($color-gray-base, 24)

		h5 .text
			width 10%
			height 23px
			background-color darken($color-gray-base, 15)

		h6 .text
			width 7%
			height 20px
			background-color darken($color-gray-base, 12)
